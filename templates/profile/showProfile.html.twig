{% extends 'base.html.twig' %}

{% block title %}Profil{{ parent() }}{% endblock %}

{% block body %}

    <div class="detail-profile-show container-form-and-show">
    <h2 class="title-show">Profil de {{ app.user.pseudo }}</h2>

    {% if app.user %}
        {% if app.user.profilePicture %}
            <img src="{{ asset('/images/' ~ app.user.profilePicture) }}" alt="Photo de profil">
        {% else %}
            <p>Aucune photo de profil disponible</p>
        {% endif %}



        <form method="post">
            <h2>Pseudo : {{ app.user.pseudo }}</h2>
            <p>Prénom : {{ app.user.firstname }}</p>
            <p>Nom : {{ app.user.lastname }}</p>
            <p>Téléphone : {{ app.user.phone }}</p>
            <p>Email : {{ app.user.email }}</p>
            <p>Ville de rattachement : {{ app.user.campus }}</p>

            {# Mettre le lien de la page d'accueil #}
            <a href="{{ path('app_activity_index') }}" class="btn btn-secondary">Retour</a>
            <a href="{{ path('app_editprofile') }}" class="btn btn-primary">Modifier</a>


        </form>
    {% else %}
        <p>Utilisateur non connecté</p>
    {% endif %}

    </div>
{% endblock %}
