{% extends 'base.html.twig' %}

{% block title %}Cr√©er un lieu {{ parent() }}{% endblock %}

{% block body %}

    <div class="container-form-and-show">

        <span class="title-page-header title-show">Ajouter un lieu</span>
        <br><br>

        {{ form_start(locationForm) }}
        <div class="form_champ">
            {{ form_label(locationForm.name) }}
            {{ form_widget(locationForm.name) }}
            {{ form_errors(locationForm.name) }}
        </div>
        <div class="form_champ">
            {{ form_label(locationForm.streetName) }}
            {{ form_widget(locationForm.streetName) }}
            {{ form_errors(locationForm.streetName) }}
        </div>
        <div class="form_champ">
            {{ form_label(locationForm.latitude) }}
            {{ form_widget(locationForm.latitude) }}
            {{ form_errors(locationForm.streetName) }}
        </div>
        <div class="form_champ">
            {{ form_label(locationForm.longitude) }}
            {{ form_widget(locationForm.longitude) }}
            {{ form_errors(locationForm.streetName) }}
        </div>
        <div class="form_champ create-activity-location">
            {{ form_label(locationForm.cities) }}
            {{ form_widget(locationForm.cities) }}
            {{ form_errors(locationForm.streetName) }}
        </div>
        {% if form_errors(locationForm)|length > 0 %}
            <span class="required-info">{{ form_errors(locationForm) }}</span>
        {% endif %}
        <div class="btn-end-form">
            <a class="stop-action-btn" href="{{ path('app_activity_create') }}">Retour</a>
            <button type="submit" class="call-action-btn">Ajouter un lieu</button>

            {{ form_end(locationForm) }}
        </div>

{% endblock %}



