{% extends 'base.html.twig' %}

{% block title %}BackOfficeUser {{ parent() }}{% endblock %}

{% block body %}
 {% for user in users %}

  <br>
  <p>{{ user.pseudo }}</p>
  <div>
   <p>Status du compte :</p>
   {% if user.activeStatus == 1 %}
    <p>Activé</p>
   {% else %}
    <p>Désactivé</p>
   {% endif %}

 </div>
  <a href="{{ path('app_users_management_soft_delete', {'id': user.id}) }}"> Desactiver le compte de : {{ user.pseudo }}</a>
  <br>
  <a href="{{ path('app_users_management_delete', {'id': user.id}) }}"> Supprimer : {{ user.pseudo }}</a>


 {% endfor %}



{% endblock %}



